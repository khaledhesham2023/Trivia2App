<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/rainbow_vortex"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nextQuestionLabel"
            android:layout_width="@dimen/dimen_000dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_016dp"
            android:fontFamily="@font/rampart_one1"
            android:gravity="center"
            android:textColor="@color/deep_blue"
            android:text="@string/prepare_for_next_question_in"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category"
            android:layout_width="@dimen/dimen_000dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nextQuestionLabel"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/deep_blue"
            tools:text="General Knowledge"
            android:fontFamily="@font/rampart_one1"
            android:layout_margin="@dimen/dimen_016dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_margin="@dimen/dimen_020dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category"
            tools:src="@drawable/general_knowledge" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answerBtn"
            android:layout_width="@dimen/dimen_000dp"
            android:text="@string/continue_text"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_016dp"
            android:textSize="@dimen/text_size_16sp"
            android:background="@drawable/bg_btn"
            android:fontFamily="@font/rampart_one1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>