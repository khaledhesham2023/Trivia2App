<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_008dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_000dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer"
            app:fontFamily="@font/rampart_one1"
            android:background="@drawable/bg_sheet"
            tools:text="Dr. Eggman"
            android:padding="@dimen/dimen_016dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/dimen_050dp"
            android:layout_height="@dimen/dimen_050dp"
            android:id="@+id/selector"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/selector" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>